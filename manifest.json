{
    "name": "TimeTracker",
    "description": "Tracks the time you spend on each tab and saves it locally on chrome storage",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "Icons/16-icon.png",
        "32": "Icons/32-icon.png",
        "48": "Icons/48-icon.png",
        "128": "Icons/128-icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Click to open the popup",
        "default_icon": {
            "16": "Icons/16-icon.png",
            "32": "Icons/32-icon.png",
            "48": "Icons/48-icon.png",
            "128": "Icons/128-icon.png"
        }
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "<all_urls>",
        "fileSystem"
    ],
    "host_permissions": [
        "*"
    ]
}
